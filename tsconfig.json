    "extends": [
        "@beastly-brawl-showdown/configs/typecheck"
    ],
    "compilerOptions": {
        "composite": true,
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
    },
    "include": [
        "src"
    ]
}